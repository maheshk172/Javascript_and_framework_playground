{
  "env": {
    "angular/angular": true,
    "browser": true,
    "node":true,
    "es6": false
  },
  "globals": {
    "_": false,
    "angular": false
  },
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "script",
    "ecmaFeatures": {
      "jsx": false,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "angular"
  ],
  "rules": {
    "no-var": 0,
    "prefer-const": 0,
    "no-console": 1,
    "comma-dangle": 2,
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      0,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "max-len": [
      1,
      160
    ],
    "no-cond-assign": [2, "always"],
    "no-ex-assign": 2,
    "curly": 2,
    "max-depth": [2, 5],
    "complexity": [1, 9],
    "indent": [2, 4, {"SwitchCase": 1}],
    "no-trailing-spaces": [2, {
      "skipBlankLines": true
    }],
    "one-var": [2, "never"],
    "func-names": 0,
    "key-spacing": [0, {
      "beforeColon": false,
      "afterColon": true
    }],
    "max-nested-callbacks": [2, 4],
    "new-cap": 0,
    "new-parens": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multiple-empty-lines": [0, {
      "max": 1
    }],
    "no-nested-ternary": 2,
    "no-new-object": 2,
    "no-spaced-func": 2,
    "arrow-spacing": [2, {
      "before": true,
      "after": true
    }],
    "operator-assignment": [2, "always"],
    "operator-linebreak": [2, "after"],
    "keyword-spacing": [0, {"before": true}],
    "space-before-blocks": [0, "always"],
    "space-before-function-paren": [0, "never"],
    "object-curly-spacing": 0,
    "array-bracket-spacing": 0,
    "computed-property-spacing": [2, "never"],
    "space-in-parens": [0, "never"],
    "space-infix-ops": [2, {
      "int32Hint": true
    }],
    "space-unary-ops": [2, {
      "words": true,
      "nonwords": false
    }],
    "no-delete-var": 2,
    "no-underscore-dangle": 0,
    "no-shadow": 2,
    "no-shadow-restricted-names": 2,
    "no-undef-init": 2,
    "no-undef": 2,
    "no-undefined": 0,
    "no-unused-vars": [1, {
      "vars": "all",
      "args": "none",
      "varsIgnorePattern": "hJSX"
    }],
    "no-use-before-define": 0,
    "yoda": [2, "never"],
    "consistent-return": 2,
    "spaced-line-comment": 0,
    "strict": [0, "safe"],
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-alert": 2,
    "no-caller": 2,
    "no-labels": 2,
    "no-eval": 2,
    "no-fallthrough": 2,
    "default-case": 2,
    "no-iterator": 2,
    "no-loop-func": 2,
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-new": 2,
    "no-param-reassign": 2,
    "no-proto": 2,
    "no-redeclare": 2,
    "no-return-assign": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unused-expressions": 2,
    "no-with": 2,
    "vars-on-top": 0,
    "wrap-iife": [2, "inside"],
    "valid-typeof": 2,
    "max-statements": [1, 30],
    "max-params": [1, 7],
    "no-unexpected-multiline": 2,
    "dot-location": [2, "property"],
    "no-unreachable": 2,
    "no-negated-in-lhs": 2,
    "no-irregular-whitespace": 2,
    "no-invalid-regexp": 2,
    "no-func-assign": 2,
    "no-extra-semi": 2,
    "no-extra-boolean-cast": 2,
    "no-empty": 2,
    "no-duplicate-case": 2,
    "no-dupe-keys": 2,
    "no-dupe-args": 2,
    "no-constant-condition": 2,
    "comma-style": [2, "last"],
    "eol-last": 2,
    "no-lonely-if": 2,

    // john papa styleguide (angular)
    "angular/module-getter": 2,
    "angular/module-setter": 2,
    "angular/no-private-call": 0,

    "angular/component-limit": 1,
    "angular/controller-as-route": 2,
    "angular/controller-as-vm": 2,
    "angular/controller-as": 2,
    "angular/deferred": 0,
    "angular/di-unused": 0,
    "angular/directive-restrict": 2,
    "angular/empty-controller": 0,
    "angular/no-controller": 0,
    "angular/no-inline-template": 0,
    "angular/no-run-logic": 1,
    "angular/no-services": 0,
    "angular/on-watch": 0,

    "angular/no-cookiestore": 2,
    "angular/no-directive-replace": 2,
    "angular/no-http-callback": 2,

    "angular/controller-name": 2,
    "angular/directive-name": 2,
    "angular/file-name": 0,
    "angular/filter-name": 0,
    "angular/module-name": 2,
    "angular/service-name": 2,

    "angular/function-type": [2, "named"],
    "angular/no-service-method": 0,

    "angular/document-service": 2,
    "angular/interval-service": 2,
    "angular/timeout-service": 2,
    "angular/window-service": 2
  }
}
